<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="views.MainController">
   <center>
      <BorderPane prefHeight="380.0" prefWidth="300.0" BorderPane.alignment="CENTER">
         <center>
            <VBox maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="180.0" prefWidth="250.0" BorderPane.alignment="CENTER">
               <children>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Label text="UserName" translateX="-3.0">
                           <padding>
                              <Insets top="10.0" />
                           </padding>
                        </Label>
                        <TextField fx:id="userNameLabel" />
                     </children>
                  </HBox>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Label text="Password" />
                        <TextField fx:id="passWordLabel" />
                     </children>
                  </HBox>
                  <BorderPane prefHeight="100.0" prefWidth="200.0">
                     <center>
                        <Button mnemonicParsing="false" onAction="#onClickLogIn" text="Log In" BorderPane.alignment="CENTER" />
                     </center>
                  </BorderPane>
                  <Label text="Username/password combination " textFill="#f50202" />
                  <Label text="is not found" textFill="#f50202" translateX="70.0" />
               </children>
            </VBox>
         </center>
         <bottom>
            <VBox maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="100.0" prefWidth="125.0" BorderPane.alignment="CENTER">
               <children>
                  <Button mnemonicParsing="false" onAction="#onClickCreateAccount" text="Create Account" />
               </children>
            </VBox>
         </bottom>
      </BorderPane>
   </center>
</BorderPane>
